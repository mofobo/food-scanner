<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Calculating the letter spacing -->
    <!-- https://material.io/design/typography/the-type-system.html#type-scale -->

    <style name="Ketchup">
        <item name="android:fontFamily">@font/ketchup</item>
        <item name="android:textColor">@color/red_500</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">-0.015625</item>
    </style>


    <style name="Ketchup.Title" parent="Ketchup">
        <item name="android:textSize">54sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Ketchup.Title.Italic" parent="Ketchup.Title">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Ketchup.Title.Bold" parent="Ketchup.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Ketchup.Title.Bold.Italic" parent="Ketchup.Title">
        <item name="android:fontFamily">@font/delicious_ketchup_bold_italic</item>
    </style>

</resources>
